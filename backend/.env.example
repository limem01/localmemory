# LocalMemory Backend Configuration

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_LLM_MODEL=llama3.2
OLLAMA_EMBED_MODEL=nomic-embed-text

# Database
DATABASE_URL=sqlite:////app/data/localmemory.db

# ChromaDB
CHROMA_PATH=/app/data/chroma

# File storage
UPLOAD_DIR=/app/data/uploads
WATCHED_DIR=/app/data/watched

# App
APP_NAME=LocalMemory
SECRET_KEY=change-me-in-production-use-a-long-random-string
DEBUG=false

# Scheduler
DIGEST_HOUR=8
DIGEST_MINUTE=0
